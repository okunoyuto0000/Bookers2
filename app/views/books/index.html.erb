<!--Book一覧ページ-->

<% if @book.errors.any? %>
  <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'100x100' %>
      <table class = "table">
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>
      <div class="row">
        <% if @user.id == current_user.id %>
          <%= link_to "", edit_user_path(@user), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
        <% else %>
          <%= link_to "", user_path(current_user.id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, url:'/books', local:true do |f| %>
        <div class = "form-group">
          <label for = "book_title">Title</label>
          <div><%= f.text_field :title, class: 'form-control book_title' %></div>
        </div>
        <div class = "form-group">
          <label for = "book_opinion">Opinion</label>
          <div><%= f.text_area :body, class: 'form-control book_opinion' %></div>
        </div>
        <div class = "form-group">
          <div><%= f.submit ' Create Book ', class: 'btn btn-success' %></div>
        </div>
      <% end %>

    </div>
  </div>
</div>



<% @books.each do |book| %>
<div>
  <%= link_to user_path(book.user.id) do %>
    <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'50x50' %>
  <% end %>
  <%= link_to book_path(book.id) do %>
  <p><%= book.title %></p>
  <% end %>
  <p><%= book.body %></p>
</div>
<% end %>

