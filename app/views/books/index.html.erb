

<h1>New book</h1>
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit ' Create Book ' %>
<% end %>


<% @books.each do |book| %>
<div>
  <p><%= book.title %></p>
  <p><%= book.body %></p>
</div>
<% end %>

