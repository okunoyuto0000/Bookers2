
<h1>ユーザー一覧</h1>

<h1>User info</h1>
<div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'100x100' %>
  <h3 class="profile-name"><%= @user.name %></h3>
  <%= @user.introduction %>
</div>

<% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
<% else %>
  <p><%= link_to "プロフィール編集", user_path(current_user.id) %></p>
<% end %>


<h1>New book</h1>
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit ' Create Book ' %>
<% end %>


<h1>Users</h1>
<% @users.each do |user| %>
<div>
  <%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
  <p><%= user.name %></p>
  <%= link_to user_path(user.id) do %>
  <p>Show</p>
  <% end %>
</div>
<% end %>
