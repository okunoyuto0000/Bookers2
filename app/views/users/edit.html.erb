
<h1>User info</h1>

<% if @user.errors.any? %>
  <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model:@user, local:true do |f| %>
  <div>
    <label for="inputName">Name</label>
    <%= f.text_field :name, autofocus: true, id:"inputName" %>
  </div>
  <div>
    <label for="inputImage">Image</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  </div>
  <div>
    <label for="inputIntroduction">Introduction</label>
    <%= f.text_area :introduction %>
  </div>

  <%= f.submit " Update User " %>
<% end %>